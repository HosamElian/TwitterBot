@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity is not null && !User.Identity.IsAuthenticated)
{
    <div class="text-center bg-color-primary">
        <div>
            <h1 class="display-4">Welcome to Twitter News Chatbot Management System! 🚀 </h1>
        </div>
        <div class="mt-5">
            @* <h3>One Place To Manage all your twitter News Pages!</h3> *@
        </div>
        <div class="align-content-center">
            <div class="tenor-gif-embed" style="align-content:center" data-postid="18871668" data-share-method="host" data-aspect-ratio="0.5" data-width="5%">
                <img src="/images/twitterHomeImage.gif" />
            </div>
            <h4 class="mt-2">Let's start the journey </h4>
        </div>
        <div>
            <p class="mt-5"><a class="btn btn-primary text-white " asp-area="Identity" asp-page="/Account/Register">Register</a> OR <a class="btn btn-primary text-white " asp-area="Identity" asp-page="/Account/Login">Login</a></p>
        </div>

    </div>
}
else
{

    <head>
        <style>

            .dashboard {
                display: flex;
                flex-wrap: wrap;
                padding: 20px;
            }

            .block {
                width: calc(49.5%);
                background-color: #ffffff;
                border: 1px solid #ddd;
                padding: 20px;
                margin-bottom: 20px;
                text-align: center
            }

            .block2 {
                width: calc(33% );
                background-color: #ffffff;
                border: 1px solid #ddd;
                text-align: center
            }

            .date-filter {
                background-color: #f0f0f0;
                padding: 10px;
                text-align: center;
            }
        </style>
    </head>
    <div class="container" style="background-color:#f0f0f0;">
        <div class="date-filter">
            <label for="date">Filter by Date:</label>
            <input type="date" id="date" name="date">
        </div>
        <div class="row">
            <div class="block">
                <svg width="100" height="100">
                    <div id="mySecondChart" style="max-width:700px; height:400px">
                    </div>
                </svg>
            </div>
            <div class="block">
                <svg width="100" height="100">
                    <div id="myChart" style="max-width:700px; height:400px">
                    </div>
                </svg>
            </div>
        </div>
        <div class="row">
            <div class="block2">
                <h1>768 </h1>
                <h5>Total Tweets Number</h5>
            </div>
            <div class="block2">
                <h1>00:28</h1>
                <h5>Next tweet</h5>
            </div>
            <div class="block2">
                <h1>146,746</h1>
                <h5>Interaction</h5>
            </div>
        </div>


    </div>

}
@section Scripts {
    <script src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        google.charts.load('current', { packages: ['corechart'] });
        google.charts.setOnLoadCallback(drawSecondChart);
        google.charts.setOnLoadCallback(drawChart);


        // Your Function
        function drawChart() {
            const data = google.visualization.arrayToDataTable([
                ['Contry', 'Mhl'],
                ['Sport', 55],
                ['Business', 49],
                ['Environment', 44],
                ['Stories', 24],
                ['Others', 15]
            ]);

            // Set Options
            const options = {
                title: 'News Types'
            };

            // Draw
            const chart = new google.visualization.PieChart(document.getElementById('myChart'));
            chart.draw(data, options);
        }
        function drawSecondChart() {
            // Set Data
            const data = google.visualization.arrayToDataTable([
                ['Time', 'Number'],
                [50, 7], [60, 8], [70, 8], [80, 9], [90, 9], [100, 9],
                [110, 10], [120, 11], [130, 14], [140, 14], [150, 15]
            ]);
            // Set Options
            const options = {
                title: 'News Number',
                hAxis: { title: 'Time' },
                vAxis: { title: 'Number' },
                legend: 'none'
            };
            // Draw Chart
            const chart = new google.visualization.LineChart(document.getElementById('mySecondChart'));
            chart.draw(data, options);
        }
        // const chart = new google.visualization.PieChart(document.getElementById('myChart'));
    </script>


}
