@using TwitterBot.Web.Areas.NewsReviewer.ViewModel
@model IEnumerable<NewsVM>

<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class="row">
					<div class="col-6  pt-2">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						News List
					</div>

				</div>
			</div>

			<div class="card-body">
				@foreach (var item in Model)
				{
					<input hidden asp-for="@item.Id" />
					<div class="row">
						<div class="d-none d-lg-block col-lg-1 text-center py-2">
							<img src="@item?.UrlToImage" class="rounded" width="100%" />
						</div>
						<div class="col-12 col-lg-6 pt-md-3">
							<h5><strong>@item?.Title</strong></h5>
							<p><small>@Html.Raw(item?.Description)</small></p>
						</div>
						<div class="col-12  col-lg-5 text-center row">
							<div class="col-4 text-md-right pt-4">
								<h6>
									<strong>
										
 									</strong>
								</h6>
							</div>
							<div class="col-6 col-sm-4 col-lg-6 pt-2">
								<div class="w-75 btn-group" role="group">
									<a asp-action="PostOnTwitter" asp-route-id="@item?.Id" class="btn btn-primary">
										@* <i class="bi bi-plus-square"></i> *@ Post
									</a> &nbsp;
									<a asp-action="Paraphrasing" asp-route-id="@item?.Id" class="btn btn-warning">
										Paraphrasing
									</a>
								</div>

							</div>
							<div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
								<a asp-action="Rejected" asp-route-id="@item?.Id" class="btn btn-danger">
									<i class="bi bi-trash-fill"></i>
								</a>
							</div>
						</div>
					</div>
					<hr />
				}
				

			</div>

			<div class="card-footer">
				<div class="card-footer row">
					<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
						<a asp-action="Summary" class="btn btn-success form-control">Summary</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>